$: << 'lib'

task :default => [:test]

task :pre_commit do
  require 'open3'
  out, err, status = Open3.capture3 "rake test"
  if 0 == status
    puts "tests OK"
  else
    $stderr.puts out, err, "\nunit tests failed, commit abandoned"
    exit 1
  end
end

desc "unit tests for toolchain"
task :test => :unit
require 'rake/testtask'
Rake::TestTask.new do |t|
  t.name = "unit"
  t.libs << "lib/mfweb"
  t.test_files = FileList['test/**/*Tester.rb']
  t.verbose = false
  t.warning = false
end

require 'rake/clean'
CLOBBER.include 'build'

require './test/infodeck/rake'

require './test/sampleBuilder'

task :one => [:test] do
  cd '..'
  sh 'rake one'
end


